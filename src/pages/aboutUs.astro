---
import Layout from "../layouts/Layout.astro";
import Mision from "@components/about/Mision.astro";
import Board from "@components/about/Board.astro";
import { getCollection } from "astro:content";
const about = await getCollection("about");
---

<Layout title="About">
  <div class="px-4 mx-auto md:px-8">
    <Mision />
    <div class="mx-auto mb-12 max-w-[1400px]" id="board">
      <h3
        class="font-extrabold text-xl my-4 transition-all duration-300
       dark:text-slate-300 text-slate-950 xl:prose-lg mx-auto px-4 md:px-8"
      >
        Conoce a nuestro equipo de trabajo
      </h3>
      <Board about={about} />
    </div>
  </div>
</Layout>
