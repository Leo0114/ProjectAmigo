---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import ThemeToggle from "@components/ThemeToggle";

const menuitems = [
  { title: "Get Involved", path: "/getInvolved" },
  { title: "Service Weeks", path: "/serviceWeeks" },
  { title: "Safety", path: "/safety" },
  { title: "About Us", path: "/aboutUs" },
  { title: "Contact", path: "/contact" },
];
---

<div class="max-w-[1400px] mx-auto px-4">
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav closeOnClick>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg"
          ><span class="font-bold text-slate-800">Project</span><span
            class="text-slate-500">Amigo</span
          >
          <span
            class="ml-1 px-2 py-0.5 text-[10px]
animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full"
          >
            New
          </span>
        </a>

        <div class="block lg:hidden">
          <MenuIcon class="w-5 h-5 text-gray-800 dark:text-sky-50" />
        </div>
      </div>
      <ThemeToggle client:load />

      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3 relative">
          {
            menuitems.map((item) => (
              <>
                {
                  <li class=" mx-auto">
                    <a href={item.path} class="flex items-center relative">
                      <span class={`peer/${item.path}  flex-1`}>
                        {item.title}
                      </span>
                    </a>
                    <span
                      class="absolute left-0 -z-10 h-full w-1/5 origin-center
         scale-x-110 scale-y-125 rounded-full bg-gray-100 transition-all
         duration-300 peer-focus/about:left-[20%] peer-focus/blog:left-[60%]
          peer-focus/contact:left-[80%] peer-focus/services:left-[40%]"
                    />
                  </li>
                }
              </>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
  </header>
</div>
