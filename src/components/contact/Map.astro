<section class="relative">
  <div class="container px-5 py-12 mx-auto flex sm:flex-nowrap flex-wrap">
    <div
      class="lg:w-2/3 md:w-1/2 bg-slate-300 rounded-lg overflow-hidden sm:mr-10 p-10 flex items-end justify-start relative dark:bg-slate-600"
    >
      <iframe
        class="rounded-lg absolute inset-0"
        width="100%"
        height="100%"
        loading="lazy"
        frameborder="0"
        title="map"
        referrerpolicy="no-referrer-when-downgrade"
        marginheight="0"
        marginwidth="0"
        scrolling="no"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3763.07337461194!2d-103.70499167531065!3d19.409235431865152!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x84255d69128ddf23%3A0x33a1035ac7970ad3!2sProyecto%20Amigo%20Colima%2C%20A.C.!5e0!3m2!1ses-419!2smx!4v1694673282166!5m2!1ses-419!2smx"
      ></iframe>
    </div>

    <div
      class="lg:w-1/3 md:w-1/2 flex flex-col md:ml-auto w-full md:py-8 mt-8 md:mt-0 bg-white p-4 rounded-md
       dark:bg-slate-600 transition-all duration-300"
    >
      <h2
        class="text-slate-900 text-lg mb-1 font-medium title-font dark:text-slate-200"
      >
        Formulario
      </h2>
      <p class="leading-relaxed mb-5 text-slate-600 dark:text-slate-300">
        Para cualquier otra consulta, complete el formulario a continuación.
      </p>
      <div class="relative mb-4">
        <label
          for="name"
          class="leading-7 text-sm text-slate-600 dark:text-slate-300"
          >Nombre</label
        >
        <input
          type="text"
          id="name"
          name="name"
          class="w-full bg-white rounded border dark:focus:border-sky-700 dark:bg-slate-300 border-slate-300 focus:border-sky-500 focus:ring-2 focus:ring-sky-200 text-base outline-none text-slate-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
        />
      </div>
      <div class="relative mb-4">
        <label
          for="email"
          class="leading-7 text-sm text-slate-600 dark:text-slate-300"
          >Correo electrónico</label
        >
        <input
          type="email"
          id="email"
          name="email"
          class="w-full bg-white rounded border dark:focus:border-sky-700 dark:bg-slate-300 border-slate-300 focus:border-sky-500 focus:ring-2 focus:ring-sky-200 text-base outline-none text-slate-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
        />
      </div>
      <div class="relative mb-4">
        <label
          for="message"
          class="leading-7 text-sm text-slate-600 dark:text-slate-300"
          >Mensaje</label
        >
        <textarea
          id="message"
          name="message"
          class="w-full bg-white rounded border border-slate-300 dark:focus:border-sky-700 dark:bg-slate-300 focus:border-sky-500 focus:ring-2 focus:ring-sky-200 h-32 text-base outline-none text-slate-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"
        ></textarea>
      </div>
      <button
        class="text-white bg-sky-500 border-0 py-2 px-6 focus:outline-none hover:bg-sky-600 rounded text-lg dark:text-slate-100"
        >Enviar</button
      >
    </div>
  </div>
</section>
