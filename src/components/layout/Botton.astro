---
interface Props {
  name: string;
  link: string;
}
const { name, link } = Astro.props;
---

<a
  href={link}
  target="_blank"
  class="justify-center transition-all rounded-xl
   text-center inline-flex items-center dark:focus:ring-[#1da1f2]/55
   hover:shadow-lg duration-300 ease-in-out hover:scale-110
   hover:opacity-90 no-underline mr-4 p-4 text-2xl dark:bg-slate-50 hover:bg-sky-600/80
    text-sky-500 dark:text-sky-600/80 bg-slate-100 hover:text-slate-50
     border-sky-600/80 border-2 dark:hover:bg-sky-600/80 dark:hover:text-slate-50 dark:hover:border-slate-100"
>
  {name}
</a>
